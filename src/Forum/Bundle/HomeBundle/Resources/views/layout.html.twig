<! DOCTYPE html>
<html>
	<head>
		<meta charset="{{ _charset }}" />
		<title>{% block title %}{% endblock %}</title>
        <script src="{{ asset('bundles/forumhome/js/jquery-1.11.2.min.js') }}"></script>
        <script src="{{ asset('bundles/forumhome/js/jquery-1.11.2.js') }}"></script>
        <script src="{{ asset('bundles/forumhome/js/layout.js') }}"></script>
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/forumhome/css/layout.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/forumhome/css/font-awesome.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/forumhome/css/font-awesome.min.css') }}">
		{% block head %}{% endblock %}
	</head>
	<body>
        <!-- Header -->
        {% set uId = app.request.cookies.get('u_id') %}
		<div id="header">
			<div class="page-container" id="nav">
				<div id="logo" class="logo">
					<a href="/" target="self"></a>
				</div>
				<ul class="nav-item l">
					<li>
                        <a href="/home">首页</a>    
                    </li>
					<li>
                        <a href="/list">列表</a>
                    </li>
				</ul>
				<div id="login-area">
                    {% if uId is null %}
					<ul class="header-unlogin clearfix">
						<li class="header-signin">
                            <a href="/login" id="js-signin-btn">登录</a>
                        </li>
						<li class="header-signup">
                            <a href="/signin" id="js-signup-btn">注册</a>
                        </li>
					</ul>
                    {% else %}
                        <a href="#" class="user-center" id="js-user-out">退出登陆</a>
                    {% endif %}
				</div>
				<div class="search-area">
					<form action="/search" name="search-form" method="post">
                    	<input class="js-input-keyword search-input" placeholder="搜索内容" type="text" autocomplete="off" name="words" value="">
                    	<input type="button" class="btn_search js-btn-search fa fa-search">
                    </form>
				</div>
			</div>
		</div>
        {% if uId %}
            <div class="course-nav">
                <ul>
                    <li><a class="ask-question" href="/ask">提出问题</a></li>
                    <li><a class="my-ask-question" href="/myquestion">我的问题</a></li>
                    <li><a class="my-answer-question" href="/myanswer">我的回答</a></li>
                </ul>
            </div
        {% endif %}
        <!-- Main content -->
		<div class="sf-reset" id="main">
			{% block body %}{% endblock %}
		</div>
        <input type="hidden" value={{ uId }} />
        <!-- Footer -->
        <div id="footer">
            <div class="waper">
                <div class="footerwaper clearfix">
                    <div class="footer_intro">
                        <p>This web was made by Leo Tang</p>
                    </div><!--
                 --><div class="followus">
                        <a class="followus-weixin" href="javascript:;" target="_blank" title="微信">
                            <div class="flw-weixin-box"></div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- JavaScript -->
        <div class="js-container">
            <script src="{{ asset('bundles/forumhome/js/layout.js') }}"></script>
        </div>
	</body>
</html>