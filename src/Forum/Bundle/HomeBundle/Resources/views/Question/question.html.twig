{% extends "ForumHomeBundle::layout.html.twig" %}
{% block head %}
	<link rel="stylesheet" href="{{ asset('bundles/forumhome/css/home.css') }}" />
{% endblock %}
{% block title "Symfony - MyQuestion" %}
{% block body %}
	<div class="main-body-container">
		<div class="question-list-container">
			<div class="question-container">
				<span>{{ question.content }}</span>
				<span>{{ question.createTime.date }}</span>
			</div>
			{% for answer in arr_answers %}
				<div class="answer-container">
					<input type="hidden" value="{{ answer.id }}"/>
					<div>
							<span>{{ answer.content }}</span>
							<span>{{ answer.createTime.date }}</span>
					</div>
				</div>
			{% endfor %}
		</div>
		{% if uId %}
			<div class="answer-question-container">
				<form class="answer-question" method="post" action="/postanswer/{{ question.id }}">
					<textarea type="textarea" name="content" placeholder="please input your answer"></textarea>
					<button type="submit" name="submit">Sudmit</button>
				</form>
			</div>
		{% endif %}
	</div>
{% endblock %}