{% extends "ForumHomeBundle::layout.html.twig" %}
{% block head %}
	<link rel="stylesheet" href="{{ asset('bundles/forumhome/css/answer-question.css') }}" />
	<link rel="stylesheet" href="{{ asset('bundles/forumhome/css/list.css') }}" />
{% endblock %}
{% block title "Symfony - MyQuestion" %}
{% block body %}
	<div class="main-body-container">
		<div class="question-list-container">
			<div class="question-main-container row">
				<div class="question-content-container col-md-8">{{ question.content }}</div>
				<div class="question-time-container col-md-4">{{ question.createTime.date }}</div>
			</div>
			{% for answer in arr_answers %}
				<div class="question-container">
					<input type="hidden" value="{{ answer.id }}"/>
					<div class="row"> 
							<div class="question-content-container col-md-8">{{ answer.content }}</div>
							<div class="question-time-container col-md-4">{{ answer.createTime.date }}</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{% if uId %}
			<div class="answer-question-container">
				<form class="answer-question" method="post" action="/postanswer/{{ question.id }}">
					<textarea type="textarea" class="form-control" name="content" placeholder="please input your answer"></textarea>
					<button type="submit" class="btn btn-primary btn-lg answer-question-btn" name="submit">Sudmit</button>
				</form>
			</div>
		{% endif %}
	</div>
{% endblock %}