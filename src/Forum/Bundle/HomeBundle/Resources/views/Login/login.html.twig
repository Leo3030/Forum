{% extends "ForumHomeBundle::layout.html.twig" %}
{% block head %}
	<link rel="stylesheet" href="{{ asset('bundles/forumhome/css/home.css') }}" />
{% endblock %}
{% block title "Symfony - Login" %}

{% block body %}
	<div class="main-body-container">
		<form method="post" class="user-login-container" action="/loginajax">
			<input name="name" type="text" placeholder="Please input your name" class="user-login-name"/>
			<input name="password" type="password" placeholder="Please input your password" class="user-login-password"/>
			<button class="user-login-btn">Submit</button>
		</form>
	</div>
{% endblock %}