{% extends "ForumHomeBundle::layout.html.twig" %}
{% block head %}
	<link rel="stylesheet" href="{{ asset('bundles/forumhome/css/list.css') }}" />
{% endblock %}
{% block title "Symfony - AnswerQuestion" %}

{% block body %}
	<div class="main-body-container">
		<div class="question-list-container">
		{% for questions in arr_questions %}
			{% for question in questions %}
			<div class="question-container row">
				<input type="hidden" value="{{ question.id }}"/>
				<div>
					<a href="/descquestion/{{ question.id }}">
						<div class="col-md-8 question-content-container">{{ question.content }}</div>
						<div class="col-md-4 question-time-container">{{ question.createTime.date }}</div>
					</a>
				</div>
			</div>
			{% endfor %}
		{% endfor %}
		</div>
	</div>
{% endblock %}